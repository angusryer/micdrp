{
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "outDir": "dist",
    "isolatedModules": true,
    "composite": true,
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["**/*.ts"]
}
